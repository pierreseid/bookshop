{% extends 'layout.html.twig' %} 

{% block title %} admin Livres{% endblock %}

{% block content %}
<div class="row mt-3 justify-content-center text-center">
  <h1 class="text-danger ">Liste des livres</h1>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Titre</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Photo couverture</th>
      <th scope="col">Prix</th>
      <th scope="col">Stock</th>
      <th scope="col">Date de création</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {% for livre in livres %}
    <tr>
      <th scope="row">{{ livre.id}}</th>
      <td>{{ livre.titre}}</td>
      <td>{{ livre.categorie.nom }}</td>
      <td><img width="15%" src="{{ asset('photosLivre/' ~ livre.photoCouv) }}" alt="{{livre.titre}}"></td>
      <td>{{ livre.prix}}€</td>
      <td>{{ livre.stock}}</td>
      <td>{{ livre.dateDeCreation | date("d/m/Y")}}</td>
      <td scope="row">  
              <a href="{{ path("admin_detail_livre", {id:livre.id})}}"><i class="fas fa-eye mx-1 text-warning"></i>
              </a>
              <a href="{{ path("admin_update_livre", {id:livre.id})}}"
                ><i class="fas fa-edit mx-1 text-success"></i>
              </a>
              <a href="{{ path("admin_delete_livre", {id:livre.id})}}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm(`Etes vous sûr de vouloir supprimer cette fiche? `)"></i></a>
          </td>
    </tr>
    {% endfor %}
  </tbody>
  </table>
</div>
{% endblock %}
